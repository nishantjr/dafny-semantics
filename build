#!/usr/bin/env python3

import os
import subprocess
import sys

# Bootstrapping
# =============

# Make sure the KNinja repo is available.
#
subprocess.check_call(['git', 'submodule', 'update', '--init', '--recursive'])
extdir = 'ext'
sys.path.append(os.path.join(os.path.dirname(__file__), extdir))

from kninja import *

# Build
# =====

proj = KProject(extdir = extdir)
def build_dafny(backend, alias, flags = ''):
    return proj.definition( alias         = alias
                          , backend       = backend
                          , main          = 'dafny.md'
                          , flags         = '--syntax-module DAFNY ' + flags
                          , runner_script = './kdafny'
                          )

haskell = build_dafny(backend = 'haskell', alias = 'dafny')
haskell.tests(glob = 't/*.dfy', alias = 'tests', flags = '--search-final')
haskell.proofs(glob = 'unit-tests.k', alias = 'unit-tests')

proj.main()
